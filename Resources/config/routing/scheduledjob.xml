<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="jobqueue_scheduledjob" pattern="/">
        <default key="_controller">NineThousandJobqueueBundle:ScheduledJob:index</default>
    </route>

    <route id="jobqueue_scheduledjob_show" pattern="/{id}/show">
        <default key="_controller">NineThousandJobqueueBundle:ScheduledJob:show</default>
    </route>

    <route id="jobqueue_scheduledjob_new" pattern="/new">
        <default key="_controller">NineThousandJobqueueBundle:ScheduledJob:new</default>
    </route>

    <route id="jobqueue_scheduledjob_create" pattern="/create">
        <default key="_controller">NineThousandJobqueueBundle:ScheduledJob:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="jobqueue_scheduledjob_edit" pattern="/{id}/edit">
        <default key="_controller">NineThousandJobqueueBundle:ScheduledJob:edit</default>
    </route>

    <route id="jobqueue_scheduledjob_update" pattern="/{id}/update">
        <default key="_controller">NineThousandJobqueueBundle:ScheduledJob:update</default>
        <requirement key="_method">post</requirement>
    </route>
    
    <route id="jobqueue_scheduledjob_deactivate" pattern="/{id}/deactivate">
        <default key="_controller">NineThousandJobqueueBundle:ScheduledJob:deactivate</default>
        <requirement key="_method">post</requirement>
    </route>

</routes>
